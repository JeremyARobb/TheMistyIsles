	public void loot() {
		room = true;
		while (room == true) {
			System.out.println("Are you looking to equip or unequip?");
			System.out.println("1) Unequip");
			System.out.println("2) Equip");
			System.out.println("3) Stats");
			System.out.println("4) Leave");
			answer = choice.next();
			if (answer.equals("3")) {
				stats();
			}
			if (answer.equals("4")) {
				Uoption = true;
			}
			if (answer.equals("1")) {
				System.out.println("Heres what you have equiped");
				System.out.print("Hat: ");
				if (GutHeadbandE == true) {
					System.out.println("GutHeadband | 3 energy | Bloody Headbutt (normal dmg, 35% chance to blind/stun)");
				}
				if (PaperHatE == true) {
					System.out.print("PaperHat | 2 mana: add 30% more damage to your next attack");
					}
				if (SherlockHatE == true) {
					System.out.print("SherlockHat | See enemy stats");
				}
				if (hat == true) {
					System.out.println("None");
				}
				System.out.print("Tunic: ");
				if (MoonWalkerE == true) {
					System.out.print("MoonWalker | +2 Mana");
				}
				if (tunic == true) {
					System.out.println("None");
				}
				System.out.print("Pants: ");
				if (NeedlePantsE == true) {
					System.out.print("NeedlePants | +1 armor, +2 Marmor");
				}
				if (pants == true) {
					System.out.println("None");
				}
				System.out.print("Weapon: ");
				if (RealStickE == true) {
					System.out.println("RealStick | +1 damage, +1 Mdamage");
				}
				if (BunnyWandE == true) {
					System.out.print("BunnyWand | +2 attack");
				}
				if (weapon == true) {
					System.out.println("None");
				}


				while (Uoption == false) {
					System.out.println("");
					System.out.println("What would you like to unequip?");
					System.out.println("1) Hat");
					System.out.println("2) Tunic");
					System.out.println("3) Pants");
					System.out.println("4) Weapon");
					System.out.println("5) Thats all");
					answer = choice.next();
					if (answer.equals("1")) {
						System.out.println("You hang up your hat");
						hat = true;
						if (GutHeadbandE == true) {
							GutHeadbandE = false;
							BloodyHeadbutt = false;
						}
						if (PaperHatE == true) {
							PaperHatE = false;
						}
						if (SherlockHatE == true) {
							SherlockHatE = false;
							StudyE = false;
						}
					}
					if (answer.equals("2")) {
						System.out.println("You remove your tunic");
						tunic = true;
						if (MoonWalkerE == true) {
							MoonWalkerE = false;
							mana = mana - 2;
						}
					}
					if (answer.equals("3")) {
						System.out.println("You take off your pants");
						pants = true;
						if (NeedlePantsE == true) {
							NeedlePantsE = false;
							armor -= 1;
							Marmor -= 2;
						}
					}
					if (answer.equals("4")) {
						System.out.println("You stash your weapon");
						weapon = true;
						if (RealStickE == true) {
							RealStickE = false;
							damage --;
							Mdamage --;
						}
						if (BunnyWandE == true) {
							BunnyWandE = false;
							attack -= 2;
						}
					}
					if (answer.equals("5")) {
						Uoption = true;
					}
				}
			}
			if (answer.equals("2")) {
				while (Uoption == false) {
					System.out.println("what would you like to equip? heres your items");
					if (hat == true) {
						System.out.println("1) Hats");
						if (GutHeadband == true) {
							System.out.println("GutHeadband | 3 energy | Bloody Headbutt (normal dmg, 35% chance to blind/stun)");
						}
						if (SherlockHat == true) {
							System.out.println("SherlockHat | See enemy stats");
						}
						if (PaperHat == true) {
							System.out.println("PaperHat | 2 mana: add 30% to your next attack");
						}
						System.out.println("");
					}
					if (hat == false) {
						System.out.println("1) You already have a hat equiped");
						System.out.println("");
					}
					if (tunic == true) {
						System.out.println("2) Tunics");
						if (MoonWalker == true) {
							System.out.println("MoonWalker shirt | Mana +2");
						}
						System.out.println("");
					}
					if (tunic == false) {
						System.out.println("2) You already have on a tunic");
						System.out.println("");
					}
					if (pants == true) {
						System.out.println("3) Pants");
						if (NeedlePants == true) {
							System.out.println("NeedlePants | +1 armor, +2 Marmor");
						}
						System.out.println("");
					}
					if (pants == false) {
						System.out.println("3) You already have on pants");
						System.out.println("");
					}
					if (weapon == true) {
						System.out.println("4) Weapons");
						if (RealStick == true) {
							System.out.println("RealStick | +1 damage, +1 Mdamage");
						}
						if (BunnyWand == true) {
							System.out.println("BunnyWand | +2 attack");
						}
						System.out.println("");
					}
					if (weapon == false) {
						System.out.println("4) You already have a weapon equiped");
						System.out.println("");
					}
					System.out.println("5) exit");
					answer = choice.next();

					if (answer.equals("1") && hat == false) {
						System.out.println("You already have on a hat");
					}
					if (answer.equals("1") && hat == true) {
						System.out.println("What hat would you like to equip?");
						System.out.println("0) none");
						if (GutHeadband == true) {
							System.out.println("1) GutHeadband | 3 energy | Bloody Headbutt (normal dmg, 35% chance to blind/stun)");
						}
						if (SherlockHat == true) {
							System.out.println("2) SherlockHat | See enemy stats");
						}
						if (PaperHat == true) {
							System.out.println("3) PaperHat | 2 mana: add 30% to your next attack");
						}
						answer = choice.next();
						if (answer.equals("0")) {
							Uoption = true;
						}
						if (answer.equals("1")) {
							System.out.println("You equip a GutHeadband");
							GutHeadbandE = true;
							BloodyHeadbutt = true;
							hat = false;
							System.out.println("");
						}
						if (answer.equals("2")) {
							System.out.println("You equip a SherlockHat");
							SherlockHatE = true;
							StudyE = true;
							hat = false;
							System.out.println("");
						}
						if (answer.equals("3")) {
							System.out.println("You equip a PaperHat");
							PaperHatE = true;
							
							hat = false;
							System.out.println("");
						}
						answer = "90";
					}
					if (answer.equals("2") && tunic == false) {
						System.out.println("You already have on a tunic");
					}
					if (answer.equals("2") && tunic == true) {
						System.out.println("What tunic would you like to put on?");
						System.out.println("0) none");
						if (MoonWalker == true) {
							System.out.println("1) MoonWalker | +2 Mana");
						}

						answer = choice.next();

						if (answer.equals("1")) {
							System.out.println("You equip a MoonWalker");
							MoonWalkerE = true;
							mana += 2;
							tunic = false;
							System.out.println("");
						}
						answer = "90";
					}
					if (answer.equals("3") && pants == false) {
						System.out.println("You already have on pants");
					}
					if (answer.equals("3") && pants == true) {
						System.out.println("What pants do you want?");
						System.out.println("0) none");
						if (NeedlePants == true) {
							System.out.println("1) Needlepants | +1 armor, +2 Marmor");
						}
						answer = choice.next();
						if (answer.equals("0")) {
							Uoption = true;
						}

						if (answer.equals("1")) {
							System.out.println("You equip a NeedlePants");
							NeedlePantsE = true;
							armor += 1;
							Marmor += 2;
							pants = false;
							System.out.println("");
						}
						answer = "90";
					}


					if (answer.equals("4") && weapon == false) {
						System.out.println("You already have a weapon");
					}
					if (answer.equals("4") && weapon == true) {
						System.out.println("What weapon would you like?");
						System.out.println("0) none");
						if (RealStick == true) {
							System.out.println("1) RealStick | +1 damage, +1 Mdamage");
						}
						if (BunnyWand == true) {
							System.out.println("2) BunnyWand | +2 attack");
						}
						answer = choice.next();



						if (answer.equals("0")) {
							Uoption = true;
						}
						if (answer.equals("1")) {
							System.out.println("You equip a RealStick");
							RealStickE = true;
							damage ++;
							Mdamage ++;
							weapon = false;
							System.out.println("");
						}
						if (answer.equals("2")) {
							System.out.println("You equip a BunnyWand");
							BunnyWandE = true;
							attack += 2;
							weapon = false;
							System.out.println("");
						}
						answer = "90";
					}

					if (answer.equals("5")) {
						Uoption = true;
					}
				}
			}
			if (Uoption == true) {
				System.out.println("are you done meandering about your room??");
				System.out.println("1) yes");
				System.out.println("2) no");
				answer = choice.next();
				if (answer.equals("1")) {
					room = false;
					Uoption = false;
				}
				if (answer.equals("2")) {
					room = true;
					Uoption = false;
				}
			}


		}
	}
	public void lvl() {
		double LevelUp = (int)(Math.random()* 7);
		if (LevelUp == 0) {
			System.out.println("You discover a hidden page in the book");
		}
		if (LevelUp == 1) {
			System.out.println("You remember what a certain vital word means");
		}
		if (LevelUp == 2) {
			System.out.println("You read all the text of a page, even the parenthesis");
		}
		if (LevelUp == 3) {
			System.out.println("You read a spinoff of the original book");
		}
		if (LevelUp == 4 ) {
			System.out.println("You read the 'notes from author'");
		}
		if (LevelUp == 5) {
			System.out.println("You turn the book upside down to get a new perspective on things");
		}
		if (LevelUp == 6) {
			System.out.println("You quickly scan through the whole book");
		}
		System.out.println("Choose 3 skills to level up (you can only put 2 skills into one stat");
		System.out.println("Heres your stats.");
		stats();
		System.out.println("---------------------------");
		System.out.println("Choice 1");
		System.out.println("1) hp");
		System.out.println("2) damage");
		System.out.println("3) Mdamage");
		System.out.println("4) armor");
		System.out.println("5) Marmor");
		System.out.println("6) energy");
		System.out.println("7) mana");
		System.out.println("8) attack");
		levelchoice = false;
		while (levelchoice == false) {
			answer = choice.next();
			if (answer.equals("1")) {
				hp += 1;
				hpC1 = true;
				levelchoice = true;
			}
			if (answer.equals("2")) {
				damage += 1;
				damageC1 = true;
				levelchoice = true;
			}
			if (answer.equals("3")) {
				Mdamage += 1;
				MdamageC1 = true;
				levelchoice = true;
			}
			if (answer.equals("4")) {
				armor += 1;
				armorC1 = true;
				levelchoice = true;
			}
			if (answer.equals("5")) {
				Marmor += 1;
				MarmorC1 = true;
				levelchoice = true;
			}
			if (answer.equals("6")) {
				energy += 1;
				energyC1 = true;
				levelchoice = true;
			}
			if (answer.equals("7")) {
				mana += 1;
				manaC1 = true;
				levelchoice = true;
			}
			if (answer.equals("8")) {
				attack += 1;
				attackC1 = true;
				levelchoice = true;
			}
		}
		System.out.println("now your second choice");
		levelchoice = false;
		while (levelchoice == false) {
			answer = choice.next();
			if (answer.equals("1")) {
				hp += 1;
				hpC2 = true;
				levelchoice = true;
			}
			if (answer.equals("2")) {
				damage += 1;
				damageC2 = true;
				levelchoice = true;
			}
			if (answer.equals("3")) {
				Mdamage += 1;
				MdamageC2 = true;
				levelchoice = true;
			}
			if (answer.equals("4")) {
				armor += 1;
				armorC2 = true;
				levelchoice = true;
			}
			if (answer.equals("5")) {
				Marmor += 1;
				MarmorC2 = true;
				levelchoice = true;
			}
			if (answer.equals("6")) {
				energy += 1;
				energyC2 = true;
				levelchoice = true;
			}
			if (answer.equals("7")) {
				mana += 1;
				manaC2 = true;
				levelchoice = true;
			}
			if (answer.equals("8")) {
				attack += 1;
				attackC2 = true;
				levelchoice = true;
			}
		}
		/*
		 * 	if (answer.equals("Y") && MdamageC1 == false && MdamageC3 == false) {
				Mdamage += 1;
				boolean MdamageC3 = true;
				levelchoice = true;
			}
			if (answer.equals("Y") && MdamageC2 == false && MdamageC3 == false){
				Mdamage += 1;
				boolean MdamagepC3 = true;
				levelchoice = true;
			}
		 */
		levelchoice = false;
		System.out.println("and finally, your third choice");
		while (levelchoice == false) {
			answer = choice.next();
			if (answer.equals("1") && hpC1 == true && hpC2 == true) {
				System.out.println("What did i tell you? Rechoose");
				answer = "9";
			}

			if (answer.equals("2") && damageC1 == true && damageC2 == true) {
				System.out.println("What did i tell you? Rechoose");
				answer = "9";
			}

			if (answer.equals("3") && MdamageC1 == true && MdamageC2 == true) {
				System.out.println("What did i tell you? Rechoose");
				answer = "9";
			}

			if (answer.equals("4") && armorC1 == true && armorC2 == true) {
				System.out.println("What did i tell you? rechoose");
				answer = "9";
			}

			if (answer.equals("5") && MarmorC1 == true && MarmorC2 == true) {
				System.out.println("What did i tell you? rechoose");
				answer = "9";
			}

			if (answer.equals("6") && energyC1 == true && energyC2 == true) {
				System.out.println("What did i tell you? Rechoose");
				answer = "9";
			}

			if (answer.equals("7") && manaC1 == true && manaC2 == true) {
				System.out.println("What did i tell you? Rechoose");
				answer = "9";
			}
			if (answer.equals("8") && attackC1 == true && attackC2 == true) {
				System.out.println("What did i tell you? Rechoose");
				answer = "9";
			}


			if (answer.equals("1")) {
				hp += 1;
				hpC3 = true;
				levelchoice = true;
			}

			if (answer.equals("2")) {
				damage += 1;
				damageC3 = true;
				levelchoice = true;
			}

			if (answer.equals("3")) {
				Mdamage += 1;
				MdamageC3 = true;
				levelchoice = true;
			}

			if (answer.equals("4")) {
				armor += 1;
				armorC3 = true;
				levelchoice = true;
			}

			if (answer.equals("5")) {
				Marmor += 1;
				MarmorC3 = true;
				levelchoice = true;
			}

			if (answer.equals("6")) {
				energy += 1;
				energyC3 = true;
				levelchoice = true;
			}

			if (answer.equals("7")) {
				mana += 1;
				manaC3 = true;
				levelchoice = true;
			}
			if (answer.equals("8")) {
				attack += 1;
				attackC3 = true;
				levelchoice = true;
			}
		}
		hpC1 = false;
		damageC1 = false;
		MdamageC1 = false;
		armorC1 = false;
		MarmorC1 = false;
		energyC1 = false;
		manaC1 = false;
		attackC1 = false;

		hpC2 = false;
		damageC2 = false;
		MdamageC2 = false;
		armorC2 = false;
		MarmorC2 = false;
		energyC2 = false;
		manaC2 = false;
		attackC2 = false;

		hpC3 = false;
		damageC3 = false;
		MdamageC3 = false;
		armorC3 = false;
		MarmorC3 = false;
		energyC3 = false;
		manaC3 = false;
		attackC3 = false;

		xpR = xpR - xp;
		xp = xp + 15;
		level += 1;

		if (level == ManaUnlock) {
			System.out.println("You unlocked a new spell");
			ManaUnlock += 4;
			ManaCounter += 1;
			if (ManaCounter == 1) {
				System.out.println("You unlocked healing, a move that you use on yourself that does not end the turn | 3 mana for 3 healing");
				heal = true;
			}
		}
		if (level == EnergyUnlock) {
			System.out.println("You unlocked a new ability");
			EnergyUnlock += 4;
			EnergyCounter += 1;
			if (EnergyCounter == 1) {
				System.out.println("You unlocked slam, a move that deals 65% of a normal hit to all enemies | 4 energy");
				slam = true;
			}
		}
	}
	public void stats() {

		System.out.println("Health is: " + hp);
		System.out.println("Damage is: " + damage);
		System.out.println("Magical Damage is: " + Mdamage);
		System.out.println("Armor is: " + armor);
		System.out.println("Magical Armor is: " + Marmor);
		System.out.println("Energy is: " + energy);
		System.out.println("Mana is: " + mana);
		System.out.println("Attack is: " + attack);
	}
	public void statistics() {
		if (xpR >= xp) {
			lvl();
		}
		if (level == ManaUnlock) {

			ManaCounter += 1;
		}
		if (level == EnergyUnlock) {

			EnergyCounter += 1;
		}
		StatsOption = true;
		while (StatsOption == true) {
			System.out.println("What would you like to do?");
			System.out.println("1) view stats");
			System.out.println("2) view ability unlock section");
			System.out.println("3) view perks");
			System.out.println("4) change nickname");
			System.out.println("5) Exit");
			answer = choice.next();
			if (answer.equals("1")) {
				stats();
			}
			if (answer.equals("2")) {
				System.out.println("Next mana ability comes at level " + ManaUnlock);
				System.out.println("Next energy ability comes at level " + EnergyUnlock);
			}
			if (answer.equals("3")) {
				if (saturated == true){
					System.out.println("Saturated: But you still have a bit of room just incase you come across some free Shire | +1 mana");
				}
				if (dweeb == true) {
					System.out.println("Dweeb: you know what you did, and you know you deserve this 'perk' | +1 Magical damage");
				}
				if (hardcore == true) {
					System.out.println("Hardcore: honestly, not worth it. | +1 damage");
				}
				if (drunk == true) {
					System.out.println("Drunk: You're drunk. | +1 hp");
				}
				if (lost == true) {
					System.out.println("Lost to a chicken: Shoulda been more savage | +1 Magical damage");
				}
				if (cocky == true){
					System.out.println("Cocky: When the narrator tells you not to do something, its probably best not to do it. | -1 energy");
				}
				if (savage == true) {
					System.out.println("Savage: Some more dialogue option will be open");
				}
			}
			if (answer.equals("4")) {
				if (misstype == false && DebbieDowner == false && nerd == false && mooreaucracy == false) {
					System.out.println("0) You don't have any nicknames yet, just say 0");
				}
				if (misstype == true) {
					System.out.println("1) 'Misstype'");
				}
				if (DebbieDowner == true) {
					System.out.println("2) 'DebbieDowner'");
				}
				if (nerd == true) {
					System.out.println("3) 'The Nerd'");
				}
				if (mooreaucracy == true){
					System.out.println("4) 'The Mooreaucrat'");
				}
				if (Rebel == true) {
					System.out.println("three) The rebel");
				}
				answer = choice.next();
				if (answer.equals("1") && misstype == true) {
					System.out.println("Nickname set to 'Misstype'");
					misstypeA = true;
					DebbieDownerA = false;
					nerdA = false;
					mooreaucracyA = false;
					RebelA = false;
				}
				if (answer.equals("2") && DebbieDowner == true) {
					System.out.println("Nickname set to 'DebbieDowner'");
					misstypeA = false;
					DebbieDownerA = true;
					nerdA = false;
					mooreaucracyA = false;
					RebelA = false;
				}
				if (answer.equals("3") && nerd == true) {
					System.out.println("'Nickname set to 'The nerd'");
					misstypeA = false;
					DebbieDownerA = false;
					nerdA = true;
					mooreaucracyA = false;
					RebelA = false;
				}
				if (answer.equals("4") && mooreaucracy == true){
					System.out.println("Nickname set to 'The Mooreaucrat'");
					misstypeA = false;
					DebbieDownerA = false;
					nerdA = false;
					mooreaucracyA = true;
					RebelA = false;
				}
				if (answer.equals("three")){
					System.out.println("Nickname set to The Rebel");
					RebelA = true;
					misstypeA = false;
					DebbieDownerA = false;
					nerdA = false;
					mooreaucracyA = false;
					
				}
				answer = "90";
			}
			if (answer.equals("5")) {
				StatsOption = false;
				System.out.println("You close your book");
			}
		}
		StatsOption = true;
		answer = "90";
	}
	public void nickname() {
		if (misstypeA == true) {
			System.out.print("'Misstype' ");
		}
		if (DebbieDownerA == true) {
			System.out.print("'DebbieDowner' ");
		}
		if (nerdA == true) {
			System.out.print("'The Nerd'");
		}
		if (mooreaucracyA == true){
			System.out.print("'The Mooreaucrat'");
		}
		if (RebelA == true) {
			System.out.println("The Rebel");
		}
	}
