		if (subsequent == true) {
			while (secondchoice == false) {
				System.out.println("What kind of creature are you?");
				System.out.println("1) a murlok");
				System.out.println("2) an imp");
				System.out.println("3) a bristle");
				System.out.println("4) well what are each of them like?");
				answer = choice.next();
