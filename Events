			System.out.println("2) after (subsequent)");
			System.out.println("3) What's the 'great extinction'?");

			answer = choice.next();
			if (answer.equals("1")) {
				System.out.println("You are a former race");
				RealStick = true;
				former = true;
				firstchoice = true;
			}
			if (answer.equals("2")) {
				System.out.println("You are a subsequent race");
