				if (answer.equals("2")) {
					System.out.println("You chose duck");
					hp += 2;
					Mdamage +=2;
					Marmor +=2;
					mana+= 5;
					intel += 5;
					secondchoice = true;
					duck = true;
				}

				if(answer.equals("3")) {
					System.out.println("You chose Squirrel");    
					hp+=2;
					damage+=1;
					Mdamage += 1;
					armor += 1;
					Marmor +=1;
					mana += 3;
					energy += 3;
					intel += 3;
					mastery += 3;
